{
  "info": {
    "name": "Delete Teacher API Test",
    "_postman_id": "91fe833c-8c78-4e18-9b94-3b1f3c22c7a4",
    "description": "Tests teacher self-delete using unified delete endpoint",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Delete Teacher - valid token",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{login_teacher_token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/account/delete",
          "host": ["{{baseUrl}}"],
          "path": ["api", "account", "delete"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Delete success (200)', () => pm.expect(pm.response.code).to.eql(200));",
              "pm.test('Response has success message', () => pm.expect(pm.response.json()).to.have.property('message'));"
            ]
          }
        }
      ]
    },
    {
      "name": "Delete Teacher - second call should 404",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{login_teacher_token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/account/delete",
          "host": ["{{baseUrl}}"],
          "path": ["api", "account", "delete"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Second delete returns 404', () => pm.expect(pm.response.code).to.eql(404));",
              "pm.test('Response has error field', () => pm.expect(pm.response.json()).to.have.property('error'));"
            ]
          }
        }
      ]
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:5173" }
  ]
}
