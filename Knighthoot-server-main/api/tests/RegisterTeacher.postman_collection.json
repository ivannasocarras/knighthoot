{
  "info": {
    "name": "Register Teacher API Test",
    "_postman_id": "82d66f52-7a10-4dbe-9fb2-2ee7d9e2b1c9",
    "description": "Tests teacher registration API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Register - Teacher",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"firstName\":\"Gandalf\",\"lastName\":\"TheWhite\",\"username\":\"gandalf001\",\"password\":\"youShallNotPass\",\"email\":\"gandalf@example.com\",\"isTeacher\":true}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/register",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "register"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "let res = pm.response.json();",
              "let status = pm.response.code;",
              "",
              "// ✅ If teacher already exists",
              "if (status === 400) {",
              "  pm.test(\"Status is 400 for existing teacher\", function () {",
              "    pm.expect(status).to.eql(400);",
              "  });",
              "  pm.test(\"Has error message\", function () {",
              "    pm.expect(res).to.have.property(\"error\");",
              "  });",
              "",
              "} else {",
              "  // ✅ New teacher flow",
              "  pm.test(\"Status code is 201\", function () {",
              "    pm.expect(status).to.eql(201);",
              "  });",
              "",
              "  pm.test(\"User object exists\", function () {",
              "    pm.expect(res).to.have.property(\"user\");",
              "  });",
              "",
              "  pm.test(\"Has required teacher fields\", function () {",
              "    pm.expect(res.user).to.have.property(\"_id\");",
              "    pm.expect(res.user).to.have.property(\"ID\");",
              "    pm.expect(res.user).to.have.property(\"firstName\");",
              "    pm.expect(res.user).to.have.property(\"lastName\");",
              "    pm.expect(res.user).to.have.property(\"username\");",
              "    pm.expect(res.user).to.have.property(\"email\");",
              "  });",
              "",
              "  pm.test(\"Contains success message\", function () {",
              "    pm.expect(res.message).to.include(\"created\");",
              "  });",
              "",
              "  // ✅ Save values",
              "  pm.environment.set(\"tUserId\", res.user._id);",
              "  pm.environment.set(\"tUsername\", res.user.username);",
              "  pm.environment.set(\"tEmail\", res.user.email);",
              "  pm.environment.set(\"tNumID\", res.user.ID);",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "https://knighthoot.app"
    }
  ]
}
