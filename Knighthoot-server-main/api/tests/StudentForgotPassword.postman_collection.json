{
  "info": {
    "name": "Forgot Password Test",
    "_postman_id": "c7a4ed38-9f6d-4c9a-8c8e-fa21b9db47d3",
    "description": "Triggers forgot-password for the Jon Snow test account.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Forgot Password - Jon Snow",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{ \"email\": \"jonsnow@example.com\" }"
        },
        "url": {
          "raw": "{{baseUrl}}/api/forgot-password",
          "host": ["{{baseUrl}}"],
          "path": ["api", "forgot-password"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status is 200', function () {",
              "    pm.expect(pm.response.code).to.eql(200);",
              "});",
              "",
              "pm.test('Response contains generic message', function () {",
              "    const res = pm.response.json();",
              "    pm.expect(res).to.have.property('message');",
              "});"
            ]
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "https://knighthoot.app"
    }
  ]
}
