{
  "info": {
    "name": "Forgot Password - Teacher API Test",
    "_postman_id": "9d1fc4c2-55b9-4a93-a32d-c2b4d4030bd3",
    "description": "Tests forgot-password flow for a teacher.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Forgot Password - Teacher",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"email\": \"gandalf@example.com\"}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/forgot-password",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "forgot-password"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status should be 200', function () {",
              "    pm.expect(pm.response.code).to.eql(200);",
              "});",
              "",
              "pm.test('Response contains generic message', function () {",
              "    const json = pm.response.json();",
              "    pm.expect(json).to.have.property('message');",
              "});"
            ]
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "https://knighthoot.app"
    }
  ]
}
